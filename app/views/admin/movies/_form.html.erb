<%= form_with model: [:admin, @movie] do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", direct_upload: true, placeholder: "Movie name", id: "movie-name" %>
  </div>
  <div class="form-group">
    <%= f.label :hardest %>
    <%= f.file_field :hardest, class: "form-control", direct_upload: true %>
  </div>
  <div class="form-group">
    <%= f.label :harder %>
    <%= f.file_field :harder, class: "form-control", direct_upload: true %>
  </div>
  <div class="form-group">
    <%= f.label :hard %>
    <%= f.file_field :hard, class: "form-control", direct_upload: true %>
  </div>
  <div class="form-group">
    <%= f.label :easy %>
    <%= f.file_field :easy, class: "form-control", direct_upload: true %>
  </div>
  <div class="form-group">
    <%= f.label :easiest %>
    <%= f.file_field :easiest, class: "form-control", direct_upload: true %>
  </div>
  <div class="form-group">
    <%= f.label :contributor %>
    <%= f.text_field :contributor, class: "form-control", placeholder: "Ex: TomCruise" %>
  </div>
  <% if params[:action] == "edit" %>
    <%= f.label :day %>
    <%= f.number_field :day, class: "form-control"%>
  <% end %>
  <div class="form-group text-center mt-10">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
