<div class=container data-controller="main">
  <h1 class="title">Cheppuko</h1>
  <div class="header-icons">
    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
      <%#= icon('fa-thin', 'square-info')%>
      <i class="fas fa-chart-simple"></i>
    </button>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      <i class="fas fa-circle-info"></i> 
    </button>
  </div>
  <%# @movies.each do |m| %>
    <div class="image-frame" data-movie="<%= @movie.id %>" data-main-target="movie">
      <%= render partial: "movies/image", locals: {image: @image, movie: @movie} %>
    </div>
  <%# end %>

  <div class="hit-buttons mb-10 mt-10" data-main-target="skip">
    
  </div>

  <div class="search-field mt-10 mb-10">
    <div class="search-movie">
      <input type="text" placeholder="Search movie" class="form-control">
    </div>
    <div class="skip">
      <button class="btn" data-action="click->main#skip">Skip</button>
    </div>
  </div>
</div>




<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>