<div class=container data-controller="main">
  
  <h1 class="title">Cheppuko</h1>
  <% if @movie %>
    <div class="header-icons">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#statsModal">
        <i class="fas fa-chart-simple"></i>
      </button>
      <button type="button" class="btn btn-primary ml-10" data-bs-toggle="modal" data-bs-target="#howToPlay">
        <i class="fas fa-circle-info"></i> 
      </button>
    </div>
  
    <div class="image-frame" data-movieid="<%= @movie&.id %>" data-main-target="movie">
      <%= render partial: "movies/image", locals: {image: @image, movie: @movie} %>
    </div>
  
    <div data-movie="<%= @movie.title %>" data-main-target="title" data-day="<%= @movie.day %>" data-contributor="<%= @movie.contributor %>"></div>

    <div class="hit-buttons mb-10 mt-10" data-main-target="skip"></div>

    <%= render 'movie_search' %>

    <div data-main-target="moviename"></div>
    <div data-main-target="squares" class="squares"></div>
  
    <div class="movie-guess" data-main-target="movieguess" data-mguess=""></div>

    <div class="next-movie" data-main-target="nextmovie"></div>
    
    <div class="social-icons" data-main-target="socialIcons">
    </div>
  <% else %>
    <p>Sorry no movie frames</p>
  <% end %>
</div>

<div id="twitter-dm" class="text-center">
  <p><span class="blink">You can contribute your screenshots via DM</span>
    <a href="https://twitter.com/messages/compose?recipient_id=181975250"
      class="twitter-dm-button" data-screen-name="@_manikantap">
      @_manikantap
    </a>
  </p>
</div>






<div class="modal fade" id="howToPlay" tabindex="-1" aria-labelledby="howToPlayLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title" id="howToPlayLabel">How to play</h6>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="info-1">
          <span class="fas fa-image"></span>
          <p>Use the image provided to guess the name of the movie</p>
        </div>
        <div class="info-2">
          <span class="fas fa-eye"></span>
          <p>If you get a guess wrong a new image from the movie is revealed.</p>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="statsModal" tabindex="-1" aria-labelledby="statsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title" id="statsModalLabel">Stats</h6>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="stats-bar">
          <div class="played row">
            <span class="bg-warning played-stat" id="played-stat"></span>
            <span>played</span>
          </div>                                              
          <div class="win row">
            <span class="bg-success won-stat" id="won-stat"></span>
            <span>won</span>
          </div>
          <div class="percentage row">
            <span id="percent"></span>
            <span>win%</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>